<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debited for Samosa"
                android:textSize="15dp"
                android:id="@+id/debitedForTextView"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/black"/>            
            
            <TextView
                android:layout_below="@id/debitedForTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹1000"
                android:textSize="22dp"
                android:layout_marginTop="6dp"
                android:id="@+id/amountTextView"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/red_400"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/amountTextView"
                android:text="24 Oct | 03:00 pm"
                android:textSize="12dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/blackOpacity60"
                android:fontFamily="@font/open_sans"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>